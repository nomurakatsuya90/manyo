<h1><%= t('application.task index') %></h1>
<p><%= notice %></p>
<table>
  <tr>
    <th><%= t('application.Title') %></th>
    <th><%= t('application.Content') %></th>
  </tr>
<% @tasks.each do |task| %>　　
  <tr>
    <td class="task_title"><%= task.title %></td>
    <td class="task_content"><%= task.content %></td>
    <td><%= link_to t('tasks.show'), task_path(task.id)  %></td>
    <td><%= link_to t('tasks.edit'), edit_task_path(task.id), data: { confirm: t('tasks.Edit really?') } %></td>
    <td><%= link_to t('tasks.delete'), task_path(task.id), method: :delete ,data: { confirm: t('tasks.Delete really?') } %></td>
  </tr>
<% end %>
</table>
<%= link_to t('tasks.create'), new_task_path %>