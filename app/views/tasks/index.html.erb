<h1><%= t('application.task index') %></h1>
<p><%= notice %></p>
<table>
  <tr>
    <th><%= t('application.Title') %></th>
    <th><%= t('application.Content') %></th>
  </tr>
<% @tasks.each do |task| %>　　
  <tr>
    <td><%= task.title %></td>
    <td><%= task.content %></td>
    <td><%= link_to 'taskの詳細', task_path(task.id)  %></td>
    <td><%= link_to "taskを編集する", edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'taskを削除する', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しくtaskを投稿する', new_task_path %>