  <h2>管理者画面</h2>
  <h3>ユーザ一覧</h3>
  <table>
  <thead>
    <tr>
      <th>ID</th>
      <th>ユーザ名</th>
      <th>ユーザ種別</th>
      <th>タスク数</th>
    </tr>
  </thead>
  <tbody>
  <% @users.each do |user|%>
   <tr>
    <td><%= user.id %></td>
    <td><%= user.name %></td>
    <td><% if user.admin? %>管理者<% else %>一般ユーザー<% end %></td>
    <td><%= user.tasks.count %></td>
    <td><%= link_to 'ユーザの詳細', admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザの編集', edit_admin_user_path(user.id) %></td>
    <td><%= link_to 'ユーザの削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
   </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'ユーザーの新規登録', new_admin_user_path %>
