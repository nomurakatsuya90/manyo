<h3>ユーザ詳細画面</h3>
<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
  </tr> 
  <tr>
    <td><%= @user.name %></td>
    <td><%= @user.email %></td>
    <td><%= @user.admin %></td>
  </tr>
</table>

<table>
  <tr>
    <th>タスク</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先度</th>
    <th colspan"3"></th>
  </tr>
  <hr>
  <% @user.tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= simple_time(task.expired_at) %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to '詳細画面', task_path(task.id), class: "btn btn-primary" %></td>
      <td><%= link_to '編集画面', edit_task_path(task.id), class: "btn btn-success", data: {confirm: '編集しますか？'} %></td>
      <td><%= link_to '削除', task_path(task.id), class: "btn btn-danger", method: :delete, data: {confirm: '本当に削除していいですか？'} %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'ユーザー一覧へ戻る', admin_users_path %>
